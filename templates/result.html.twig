{# templates/result.html.twig #}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Test Results</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
    <div class="container mt-5">
        <h1 class="mb-4">Test Results</h1>

        {# Section for correct answers #}
        <div class="mb-3">
            <h2>Correctly Answered Questions</h2>
            <ul class="list-group">
                {% for text in correctAnswers %}
                    <li class="list-group-item list-group-item-success">{{ text }}</li>
                {% else %}
                    <li class="list-group-item">No questions answered correctly.</li>
                {% endfor %}
            </ul>
        </div>

        {# Section for incorrect answers #}
        <div class="mb-3">
            <h2>Questions with Errors</h2>
            <ul class="list-group">
                {% for text in wrongAnswers %}
                    <li class="list-group-item list-group-item-danger">{{ text }}</li>
                {% else %}
                    <li class="list-group-item">No errors in your answers.</li>
                {% endfor %}
            </ul>
        </div>

        <a href="{{ path('test_start') }}" class="btn btn-primary">Try Again</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
